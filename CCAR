/** @file CCAR
  * @brief a file to practice class
  * @author 1092061 陳友傑
  * @since  110/3/10
  * @version 1.0
  */
 
#include <iostream>
#include <string>
using namespace std;

/** 宣告一個類別叫做ＣＣＡＲ
  * 將其字串設為隱私(private)
  * 且將其變數設為保護(protected)
  * 並公開(public)其中之函式
  * @param input nothing
  * @param output nothing
  * @return nothing 
  */
class CCAR {
private:
/** 車子的名字
  */
private:
string nickname; 
protected:
/** 車燈的數量
  */
int light;

/** 車輪的數量
  */
int wheel;

public:

CCAR() :light(2)
{
wheel = 5;
cout << "car's constructor(wheel=" << wheel << ")" << endl;
}
CCAR(string nickname) :light(2)
{
wheel = 5;
this->nickname = nickname;
cout << "car's constructor(nickname=" << nickname << ")" << endl;
}
~CCAR()
{
cout << "car's destructor" << "(" << nickname << ")" << endl;
}
void start()
{
cout << "car's start" << endl;
}
void stop()
{
cout << "car's stop" << endl;
}
void turn()
{
cout << "car's turn" << endl;
}
};
//--------------------------

class CBMW : public CCAR {
public:
CBMW() { light = 4; wheel = 4; cout << "bmw's constructor" << endl; }
~CBMW() { cout << "bmw's destructor" << endl; }
void Abs()
{
cout << "bmw's abs" << endl;
}
void start()
{
cout << "bmw's start" << endl;
CCAR::start();//scope operator

}
};
//--------------------------
int main(int argc, const char * argv[]) {
CBMW bmw;
// bmw.light=3;
bmw.start();
bmw.Abs();
bmw.stop();

return 0;
}
